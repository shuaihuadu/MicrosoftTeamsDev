{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${imagePrompt}",
      "wrap": true,
      "spacing": "None",
      "horizontalAlignment": "Left"
    },
    {
      "type": "Image",
      "spacing": "Small",
      "separator": true,
      "url": "${imageUrl}",
      "msTeams": {
        "allowExpand": true
      }
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "查看原图",
      "url": "${imageUrl}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}